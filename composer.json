{
    "name": "dndeus/unit-conversions",
    "description": "A php unit conversion package",
    "keywords": [
        "dndeus",
        "unit-conversions"
    ],
    "homepage": "https://github.com/dndeus/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Sakis",
            "email": "dndeus.85@gmail.com",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Dndeus\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dndeus\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --colors --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
